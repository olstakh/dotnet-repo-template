{
  "$schema": "http://json.schemastore.org/template",
  "author": "Alex Stakh",
  "classifications": [ "Solution", "Repository" ],
  "identity": "DotnetRepo.Stakh",
  "name": ".NET Repository Template with recommended defaults, custom analyzers and boilerplate projects",
  "shortName": "repo-template",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "sourceName": "RenameMe",
  "preferNameDirectory": true,
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            ".git/**/*",
            ".vs/**/*",
            "**/bin/**/*",
            "**/obj/**/*",
            "**/*.user",
            "**/.DS_Store",
            "Template/**/*"
          ]
        }
      ]
    }
  ],
  "symbols": {
    "TemplateDefaultName": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "TEMPLATE_DEFAULT_NAME",
      "defaultValue": "RenameMe"
    }
  }
}
