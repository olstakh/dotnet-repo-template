{
  "$schema": "http://json.schemastore.org/template",
  "author": "Alex Stakh",
  "classifications": [ "Solution", "Repository" ],
  "identity": "DotnetRepo-olstakh",
  "name": ".NET repository with recommended defaults",
  "shortName": "repo-template",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "sourceName": "RenameMe",
  "preferNameDirectory": true,
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            ".git/**/*",
            ".vs/**/*",
            "**/bin/**/*",
            "**/obj/**/*",
            "**/*.user",
            "**/.DS_Store"
          ]
        },
        {
          "condition": "(!IncludeAnalyzers)",
          "exclude": [
            "CodeAnalysis/**/*"
          ]
        }
      ]
    }
  ],
  "symbols": {
    "TemplateDefaultName": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "TEMPLATE_DEFAULT_NAME",
      "defaultValue": "RenameMe"
    },
    "IncludeAnalyzers": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "displayName": "Include analyzer projects",
      "description": "If true, includes the CodeAnalysis folder with custom Roslyn analyzer and test projects."
    }
  }
}
